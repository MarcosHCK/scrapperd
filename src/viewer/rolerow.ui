<interface domain="en_US">

  <template class="ScrapperdViewerRoleRow" parent="GtkGrid">

    <child>

      <object class="GtkExpander" id="expander1">

        <layout>
          <property name="column">0</property>
          <property name="row">0</property>
        </layout>

        <property name="halign">start</property>
        <property name="valign">center</property>
      </object>
    </child>

    <child>

      <object class="GtkRevealer">

        <child>

          <object class="GtkGrid">

            <child>

              <object class="GtkFrame">

                <child> <object class="GtkLabel" id="label1"> <property name="xalign">1.0</property> </object> </child>
                <property name="hexpand">true</property> <property name="label">Id</property>
              </object>
            </child>

            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
          </object>
        </child>

        <layout>
          <property name="column">0</property>
          <property name="column-span">2</property>
          <property name="row">1</property>
        </layout>

        <property name="reveal-child" bind-source="expander1" bind-property="expanded" bind-flags="sync-create" />
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
      </object>
    </child>

    <child>

      <object class="GtkGrid">

        <child>

          <object class="GtkButton" id="button1">

            <child>

              <object class="GtkImage">
                <property name="icon-name">window-close-symbolic</property>
              </object>
            </child>

            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>

            <property name="has-frame">False</property>
            <signal name="clicked" handler="on_button1_clicked" />
          </object>
        </child>

        <child>

          <object class="GtkButton" id="button2">

            <child>

              <object class="GtkImage">
                <property name="icon-name">view-paged-symbolic</property>
              </object>
            </child>

            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>

            <property name="has-frame">False</property>
            <signal name="clicked" handler="on_button2_clicked" />
          </object>
        </child>

        <layout>
          <property name="column">1</property>
          <property name="row">0</property>
        </layout>

        <property name="halign">end</property>
        <property name="hexpand">true</property>
        <property name="valign">center</property>
        <property name="vexpand">false</property>
      </object>
    </child>
  </template>
</interface>
